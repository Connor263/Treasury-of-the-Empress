<resources>
    <!-- Base application theme. -->
    <style name="Theme.TreasuryOfTheEmpress" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.TreasuryOfTheEmpress.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/decal_2</item>

        <item name="postSplashScreenTheme">@style/Theme.TreasuryOfTheEmpress</item>
    </style>
</resources>